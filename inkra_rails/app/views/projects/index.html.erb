<% content_for :page_title, "Projects" %>

<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Your Projects</h1>
    <%= link_to "New Project", new_project_path, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <% if @projects.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @projects.each do |project| %>
        <div class="bg-white shadow-md rounded-lg p-6 border border-gray-200">
          <h3 class="text-xl font-semibold mb-2"><%= project.title %></h3>
          <p class="text-gray-600 mb-4 truncate"><%= project.topic %></p>
          
          <div class="flex justify-between items-center">
            <span class="inline-block bg-blue-100 text-blue-800 text-sm px-2 py-1 rounded">
              <%= project.status.humanize %>
            </span>
            <%= link_to "View", project, class: "text-blue-500 hover:text-blue-700 font-medium" %>
          </div>
          
          <p class="text-xs text-gray-500 mt-4">
            Created <%= time_ago_in_words(project.created_at) %> ago
          </p>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <h3 class="text-lg font-medium text-gray-900 mb-2">No projects yet</h3>
      <p class="text-gray-600 mb-6">Create your first project to start your story</p>
      <%= link_to "Create Project", new_project_path, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>
